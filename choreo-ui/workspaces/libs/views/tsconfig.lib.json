{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@design-system/*": ["./src/*"]
    },
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/__docs__",
    "src/**/__test__",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.mdx",
    "node_modules",
    "dist"
  ]
}